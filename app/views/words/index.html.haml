%h1 Listing words

%table
  %tr
    %th Traditional char
    %th Simplified char
    %th Meaning
    %th Pronunciation
    %th
    %th
    %th

  - @words.each do |word|
    %tr
      %td= word.traditional_char
      %td= word.simplified_char
      %td= word.meaning
      %td= word.pronunciation
      %td= link_to 'Show', word
      %td= link_to 'Edit', edit_word_path(word)
      %td= link_to 'Destroy', word, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Word', new_word_path
